{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webappName": {
            "type": "string"
        },
        "servicePlanName": {
            "type": "string"
        },
        "repositoryUrl": {
            "type": "string",
            "defaultValue": "https://github.com/sdib/netcorelive.git"
        },
        "repositoryBranch": {
            "type": "string",
            "defaultValue": "devoxx"
        },
        "servicePlanSKU": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard"
            ],
            "defaultValue": "Basic"
        },
        "numberOfWorkers": {
            "type": "string",
            "defaultValue": "1"
        },
        "servicePlanWorkerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "1"
        }
    },
    "variables": {},
    "resources": [{
            "name": "[parameters('servicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "West Europe",
            "apiVersion": "2014-06-01",
            "dependsOn": [],
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('servicePlanName'))]": "Resource",
                "displayName": "[parameters('servicePlanName')]"
            },
            "properties": {
                "name": "[parameters('servicePlanName')]",
                "sku": "[parameters('servicePlanSKU')]",
                "workerSize": "[parameters('servicePlanWorkerSize')]",
                "numberOfWorkers": "[parameters('numberOfWorkers')]"
            }
        },
        {
            "name": "[parameters('webappName')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-08-01",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('servicePlanName'))]"
            ],
            "tags": {
                "displayName": "[parameters('webappName')]"
            },
            "properties": {
                "name": "[parameters('webappName')]",
                "serverFarmId": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/', resourceGroup().name, '/providers/', 'Microsoft.Web/serverfarms/', parameters('servicePlanName'))]",
                "clientAffinityEnabled": false,
                "siteConfig": {
                    "AlwaysOn": true,
                    "use32BitWorkerProcess": false,
                    "clientAffinityEnabled": false,
                    "phpVersion": "",
                    "pythonVersion": "",
                    "javaVersion": null
                }
            },
            "resources": [{
                "apiVersion": "2015-08-01",
                "name": "web",
                "type": "sourcecontrols",
                "dependsOn": [
                    "[resourceId('Microsoft.Web/Sites', parameters('webappName'))]"
                ],
                "properties": {
                    "RepoUrl": "[parameters('repositoryUrl')]",
                    "branch": "[parameters('repositoryBranch')]",
                    "IsManualIntegration": true
                }
            }]
        }
    ]
}